<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Command Game</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="bg-gray-100 min-h-screen">
    <header class="bg-white shadow">
        <nav class="container mx-auto px-4 py-3">
            <div class="flex justify-between items-center">
                <div class="flex items-center space-x-6">
                    <a class="text-xl font-bold text-gray-800" asp-controller="Home" asp-action="Index">Command Game</a>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="flex space-x-4">
                            <a class="text-gray-600 hover:text-gray-800" asp-controller="Home" asp-action="Index">Home</a>
                            <a class="text-gray-600 hover:text-gray-800" asp-controller="Game" asp-action="Index">Play</a>
                            <a class="text-gray-600 hover:text-gray-800" asp-controller="LevelEditor" asp-action="Index">My Levels</a>
                        </div>
                    }
                </div>
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <form asp-controller="Account" asp-action="Logout" method="post" class="inline">
                        <button type="submit" class="text-gray-600 hover:text-gray-800">Logout</button>
                    </form>
                }
                else
                {
                    <div class="flex space-x-4">
                        <a class="text-gray-600 hover:text-gray-800" asp-controller="Account" asp-action="Login">Login</a>
                        <a class="text-gray-600 hover:text-gray-800" asp-controller="Account" asp-action="Register">Register</a>
                    </div>
                }
            </div>
        </nav>
    </header>

    <main class="container mx-auto px-4 py-8">
        @RenderBody()
    </main>

    <footer class="bg-white shadow mt-8">
        <div class="container mx-auto px-4 py-4 text-center text-gray-600">
            &copy; 2024 - Command Game
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
