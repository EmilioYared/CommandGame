<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Command Game</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
    <header class="bg-white shadow">
        <nav class="container mx-auto px-4 py-3">
            <div class="flex justify-between items-center">
                <a class="text-xl font-bold text-gray-800" asp-controller="Home" asp-action="Index">Command Game</a>
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <form asp-controller="Account" asp-action="Logout" method="post" class="inline">
                        <button type="submit" class="text-gray-600 hover:text-gray-800">Logout</button>
                    </form>
                }
            </div>
        </nav>
    </header>

    <main class="container mx-auto px-4 py-8">
        @RenderBody()
    </main>

    <footer class="bg-white shadow mt-8">
        <div class="container mx-auto px-4 py-4 text-center text-gray-600">
            &copy; 2024 - Command Game
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
