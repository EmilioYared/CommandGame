@model List<CommandGame.Controllers.LevelViewModel>

@{
    ViewData["Title"] = "Select Level";
}

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
            <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-6xl">
                Select a Level
            </h1>
            <p class="mt-5 max-w-xl mx-auto text-xl text-gray-500">
                Choose a level to challenge your programming skills
            </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            @foreach (var level in Model)
            {
                <div class="bg-white rounded-xl shadow-sm overflow-hidden transform transition-all duration-300 hover:scale-105 hover:shadow-xl">
                    <div class="p-6">
                        <div class="flex items-center justify-between mb-4">
                            <h3 class="text-xl font-bold text-gray-900">@level.Name</h3>
                            <span class="px-3 py-1 text-sm font-semibold text-blue-600 bg-blue-100 rounded-full">
                                Level @level.LevelId
                            </span>
                        </div>
                        
                        <p class="text-gray-600 mb-6 line-clamp-3">@level.Description</p>
                        
                        <div class="flex items-center justify-between text-sm text-gray-500 mb-6">
                            <div class="flex items-center space-x-2">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                                </svg>
                                <span>@level.MaxCommands commands</span>
                            </div>
                            <div class="flex items-center space-x-2">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                </svg>
                                <span>@level.CreatorName</span>
                            </div>
                        </div>
                        
                        <a href="@Url.Action("Index", "Game", new { levelId = level.LevelId })" 
                           class="block w-full px-4 py-3 text-center text-white font-medium bg-blue-600 hover:bg-blue-700 rounded-lg transition-colors duration-200">
                            Play Level
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
        transition: all .2s ease-in-out;
    }
    
    .card {
        transition: all .2s ease-in-out;
    }
</style> 